generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Nutritionist {
  id              String           @id @default(uuid())
  firstName       String
  lastName        String
  email           String           @unique
  telephone       String?
  address         String?
  specializations Specialization[] @relation("NutritionistSpecializations")
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model Specialization {
  id            String         @id @default(uuid())
  title         String         @unique
  description   String?
  nutritionists Nutritionist[] @relation("NutritionistSpecializations")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}
